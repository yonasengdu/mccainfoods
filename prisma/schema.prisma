generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Employee {
  id             String   @id @default(cuid())
  fullName       String
  phoneNumber    String
  passportNumber String
  gender         String
  photograph     String   // base64 data URL
  age            Int
  status         String   @default("pending") // pending | approved | rejected
  createdAt      DateTime @default(now())
}
